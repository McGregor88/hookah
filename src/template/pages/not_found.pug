- var pagititle = "Страница не найдена";

doctype html
html(lang="ru")
	head
		include ../partials/common/head.pug
	body
		include ../partials/common/header.pug

		#error-not-found
			//- Content
			#content.error_content
				section.s-error(style={"background-image":"url(src/image/404.png)"})
